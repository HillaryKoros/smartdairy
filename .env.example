# ===========================================
# Koimeret Dairies - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-generate-a-new-one
DJANGO_SETTINGS_MODULE=smartdairy.settings.dev

# Database (PostgreSQL)
DATABASE_URL=postgres://koimeret:koimeret123@localhost:5433/koimeret

# Redis
REDIS_URL=redis://localhost:6380/0

# Celery
CELERY_BROKER_URL=redis://localhost:6380/1

# Memcached
MEMCACHED_URL=localhost:11212

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# CORS Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost

# Admin User (created on first run)
DJANGO_SUPERUSER_PHONE=0700000000
DJANGO_SUPERUSER_PASSWORD=admin123

# ===========================================
# Frontend Settings
# ===========================================
NEXT_PUBLIC_API_URL=/api/v1

# ===========================================
# Production Settings (for deployment)
# ===========================================
# SERVER_HOST=your-server-ip
# SERVER_USER=root
# GHCR_TOKEN=your-github-token
